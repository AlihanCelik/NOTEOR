<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Şekil katmanı: Dikdörtgen (çerçevesiz iç içe dikdörtgen) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/grey" /> <!-- Şeklin arka plan rengi -->
            <corners
                android:topLeftRadius="40dp"
                android:topRightRadius="40dp"
                android:bottomRightRadius="40dp"
                android:bottomLeftRadius="40dp" />
        </shape>
    </item>

    <!-- Kenarlık katmanı: Çerçeve için -->
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Çerçevenin arka plan rengi (siyah) -->
            <corners
                android:topLeftRadius="40dp"
                android:topRightRadius="40dp"
                android:bottomRightRadius="40dp"
                android:bottomLeftRadius="40dp" />
        </shape>
    </item>
</layer-list>