<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateNoteActivity"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal"
        android:background="@drawable/background_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/backButton"
            android:src="@drawable/backbutton"></ImageView>
        <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />
        <ImageView
            android:id="@+id/saveButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/save"
            android:layout_marginRight="20dp">

        </ImageView>
    </LinearLayout>

    <TextView
        android:id="@+id/tvDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date"
        android:textColor="@color/grey"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/date_background"
        app:layout_constraintBottom_toTopOf="@+id/notes_title"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </TextView>


    <EditText
        android:id="@+id/notes_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:maxLines="1"
        android:textSize="20dp"
        android:padding="10dp"
        android:textColorHint="@color/grey"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:background="@null"
        android:inputType="text"
        android:hint="@string/NoteTitle"
        app:layout_constraintBottom_toTopOf="@+id/notesSubTitleLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDateTime">

    </EditText>

    <LinearLayout
        android:id="@+id/notesSubTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notes_title">
        <View
            android:id="@+id/colorView"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/moonBlue"></View>
        <EditText
            android:id="@+id/notes_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:maxLines="1"
            android:textSize="15dp"
            android:inputType="text"
            android:background="@null"
            android:textColorHint="@color/grey"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:hint="@string/NotesSubTitle"
            >

        </EditText>

    </LinearLayout>
    <EditText
        android:id="@+id/notes_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textSize="17dp"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColorHint="@color/grey"
        android:textColor="@color/black"
        android:hint="@string/NoteTitle"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notesSubTitleLayout"
        >

    </EditText>

    <ImageView
        android:id="@+id/more"
        android:layout_width="53dp"
        android:layout_height="35dp"
        android:src="@drawable/more"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/grey">

    </ImageView>



</androidx.constraintlayout.widget.ConstraintLayout>